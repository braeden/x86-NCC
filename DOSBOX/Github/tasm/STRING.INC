;; STRINGS.INC; ; Author:;  David Foster;; Description:;  Contains functions for performing various;  operations on '$'-terminated strings.; ; Requires:;  none;; Flags:;  UNTESTED, INCOMPLETE;; ##################################################################; # Returns the number of characters in a string. (UNTESTED); # ; # Input:; #  DS:DX -> string; # ; # Changes:; #  AL: length of the string; ##################################################################StrLen PROC  PUSH DI   MOV AL,0   MOV DI,DX     StrLen_Loop:   CMP BYTE PTR [DI],'$'   JE StrLen_Loop_Done   INC AL   INC DI   JMP StrLen_Loop  StrLen_Done:  POP DI  RETStrLen ENDP; ##################################################################; # Returns the character at the specified index within a string.; #; # Input:; #  AH: index of char to read (0=first character); #  DS:DX -> string; # ; # Changes:; #  AL: character; ##################################################################StrCharAt PROC  PUSH DI   MOV DI,DX   ADD DI,AH   MOV AL,BYTE PTR [DI]  POP DI  RETStrCharAt ENDP